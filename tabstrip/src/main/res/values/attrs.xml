<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TabStripView">
        <attr name="tsvViewPager" format="reference" />
        <attr name="tsvAutoFindViewPager" format="boolean" />
        <attr name="tsvClickSmoothScroll" format="boolean" />
    </declare-styleable>
    <declare-styleable name="TabStripViewGroup">
        <attr name="tsgViewPager" format="reference" />
        <attr name="tsgAutoFindViewPager" format="boolean" />
        <attr name="tsgClickSmoothScroll" format="boolean" />
    </declare-styleable>
    <declare-styleable name="GradientTabStrip">
        <attr name="gtsDivider" format="reference" />
        <attr name="gtsShowDividers">
            <flag name="none" value="0" />
            <flag name="beginning" value="1" />
            <flag name="middle" value="2" />
            <flag name="end" value="4" />
        </attr>
        <attr name="gtsDividerPadding" format="dimension" />
        <attr name="gtsCenterInterval" format="reference" />
        <attr name="gtsCenterIntervalAsItem" format="boolean" />
        <attr name="gtsCenterIntervalPadding" format="dimension" />
        <attr name="gtsClickSmoothScroll" format="boolean" />
        <attr name="gtsItemBackground" format="reference" />
        <attr name="gtsTextSize" format="dimension" />
        <attr name="gtsTextColorNormal" format="color" />
        <attr name="gtsTextColorSelected" format="color" />
        <attr name="gtsDrawablePadding" format="dimension" />
        <attr name="gtsDotCenterToViewCenterX" format="dimension" />
        <attr name="gtsDotCenterToViewCenterY" format="dimension" />
        <attr name="gtsDotCanGoOutside" format="boolean" />
        <attr name="gtsDotAutoChangeWidth" format="boolean" />
        <attr name="gtsDotColor" format="color" />
        <attr name="gtsDotBackground" format="reference" />
        <attr name="gtsDotTextSize" format="dimension" />
        <attr name="gtsDotTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="IndicatorTabStrip">
        <attr name="itsDivider" format="reference" />
        <attr name="itsShowDividers">
            <flag name="none" value="0" />
            <flag name="beginning" value="1" />
            <flag name="middle" value="2" />
            <flag name="end" value="4" />
        </attr>
        <attr name="itsDividerPadding" format="dimension" />
        <attr name="itsClickSmoothScroll" format="boolean" />
        <attr name="itsItemBackground" format="reference" />
        <attr name="itsItemColorBackgroundNormal" format="color" />
        <attr name="itsItemColorBackgroundSelected" format="color" />
        <attr name="itsTextSize" format="dimension" />
        <attr name="itsTextColorNormal" format="color" />
        <attr name="itsTextColorSelected" format="color" />
        <attr name="itsTextScale" format="float" />
        <attr name="itsDotCenterToViewCenterX" format="dimension" />
        <attr name="itsDotCenterToViewCenterY" format="dimension" />
        <attr name="itsDotCanGoOutside" format="boolean" />
        <attr name="itsDotAutoChangeWidth" format="boolean" />
        <attr name="itsDotColor" format="color" />
        <attr name="itsDotBackground" format="reference" />
        <attr name="itsDotTextSize" format="dimension" />
        <attr name="itsDotTextColor" format="color" />
        <attr name="itsUnderlineColor" format="color" />
        <attr name="itsUnderlineHeight" format="dimension" />
        <attr name="itsUnderlinePadding" format="dimension" />
        <attr name="itsIndicatorColor" format="color" />
        <attr name="itsIndicatorHeight" format="dimension" />
        <attr name="itsIndicatorPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="TagTabStrip">
        <attr name="ttsDrawable" format="reference" />
        <attr name="ttsDrawableNormal" format="reference" />
        <attr name="ttsDrawableSelected" format="reference" />
        <attr name="ttsDrawablePadding" format="dimension" />
        <attr name="ttsScale" format="float" />
        <attr name="ttsGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>
</resources>